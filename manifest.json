{
  "manifest_version": 3,
  "name": "KSC - Kurdish Scripts Converter",
  "version": "1.0",
  "description": "A Chrome extension to convert between Kurdish scripts, from Persian-Arabic script to Latin (Hawar) script and vice versa!",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js",
        "kurdinus.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*.png"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}